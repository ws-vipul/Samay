<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dashButton" parent="Theme.AppCompat">
        <item name="background">@color/black</item>
    </style>
    <style name="InputDatePicker" parent="Theme.AppCompat">
        <!-- Text color -->
        <item name="android:calendarTextColor">@color/light_grey</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="headingTextLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/bold</item>
    </style>
    <style name="subHeadingTextLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/medium</item>
    </style>
    <style name="textLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/medium</item>
    </style>
    <style name="inputButton">
        <item name="background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/medium</item>
    </style>
    <style name="styleButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/bold</item>
    </style>
</resources>